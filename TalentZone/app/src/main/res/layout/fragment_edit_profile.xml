<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://sche56yu8olmas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:background="@drawable/bg"
    android:layout_height="match_parent" tools:context="com.iti.ahmed.talentzone.EditProfile">

    <!-- TODO: Update blank fragment layout -->

      <de.hdodenhof.circleimageview.CircleImageView
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/imv"
          android:layout_margin="10dp"
          android:src="@drawable/profile"
          android:layout_width="100sp"
          android:layout_height="100sp"
          app:civ_border_width="2dp"
          app:civ_border_color="#FFffff"
          />

          <EditText
              android:layout_marginTop="10dp"
              android:id="@+id/ed_first_name"
              android:layout_toRightOf="@id/imv"
              android:text="ahmed"
              android:textColor="#000000"
              android:layout_width="250dp"
              android:layout_height="wrap_content" />
          <EditText
              android:id="@+id/ed_last_name"
              android:text="ibrahem"
              android:textColor="#000000"
              android:layout_below="@id/ed_first_name"
              android:layout_toRightOf="@id/imv"
              android:layout_width="250dp"
              android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/imv"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Personal Information"-->
            <!--android:layout_gravity="center"-->
            <!--android:textColor="#ff0000"-->
            <!--android:textSize="20sp"-->
            <!--/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/ed_age"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile : "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/ed_mobile"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="01022105581"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :  "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/ed_email"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ahmed@gmail.com"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talent URL :  "
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/ed_talent_url"
            android:textColor="#000000"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="www.google.com"
            android:textSize="20sp"
            />
    </LinearLayout>

        <Button
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="#880000"
            android:textColor="#ffffff"
            android:id="@+id/btLogin"

            />

    </LinearLayout>
</RelativeLayout>
